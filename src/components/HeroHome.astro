---
import { fade } from 'astro:transitions'
---

<style>
	/* Style for overlay */
	.overlay {
		background-color: rgba(0, 0, 0, 0.5); /* Adjust transparency as needed */
	}
</style>
<!-- Hero Section with Video Background -->
<section
	class="relative flex h-screen flex-col items-center justify-center px-3 py-0 text-center text-white"
>
	<!-- Video background -->
	<iframe
		class="absolute inset-0 h-full w-full"
		src="https://www.youtube.com/embed/xZAis02VSuA?autoplay=1&mute=1&loop=1&controls=0"
		frameborder="0"
		allowfullscreen
		allow="autoplay"></iframe>
	<!-- Overlay for Call to Action -->
	<div class="overlay absolute inset-0 flex items-center justify-center">
		<!-- Call to Action Content -->
		<div class="text-center text-white">
			<h1
				transition:animate={fade({ duration: '0.4s' })}
				class="mb-4 text-4xl font-bold text-primary"
			>
				True North Property Services Inc.
			</h1>
			<p class="mb-8 text-lg">Building Toronto's Future</p>
			<a href="tel:416-786-7091" class="btn btn-outline btn-secondary btn-wide">CALL US TODAY</a>
		</div>
	</div>
</section>
